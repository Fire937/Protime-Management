{% extends 'CoreBundle::layout.html.twig' %}

{% block content %}
{% if error %}
<div class="alert callout">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("user_login_check") }}" method="post">

	<div>
		<label> 
			Identifiant : <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" >
		</label>
	</div>

	<div>
		<label> Mot de passe : <input type="password" id="text" name="_password" required="required" ></label> 
	</div>

	<div> 
		<input type="submit" name="valider" value="Connexion" />
	</div>

</form>
{% endblock %}