{%extends 'CoreBundle::layout.html.twig' %}

{% block content %}
<div>
	<p><a href="{{ url('user_register') }}">Créer une ressource</a></p>

	<table>
		<caption> Gestion des ressources </caption>
		<tr> 
			<th>Nom d'utilisateur</th> 
			<th>Rôle</th> 
			{% if is_granted('ROLE_CP') %}<th>Action</th>{% endif %}
		</tr>
		
		{% for resource in resources %}
		<tr>
			<td>
				{% if is_granted('ROLE_CP') %}<a href="{{ url('user_edit') }}">{% endif %}
					{{ resource.username }}
				{% if is_granted('ROLE_CP') %}</a>{% endif %}
			</td>
			<td>{{ resource.role }}</td>
			{% if is_granted('ROLE_CP') %}
			<td><a href="{{ url('user_delete', {'id': resource.id }) }}">Supprimer</a></td>
			{% endif %}
		</tr>
		{% endfor %}

	</table>
</div> 
{% endblock %}